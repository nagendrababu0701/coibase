<div class ="row">
  <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
    <h1 class="page-header">Seller Details</h1>
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Bank Name</th>
            <th>Account Name</th>
            <th>Account Number</th>
            <th>Min Purchase</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= @seller.bank_name%></td>
            <td><%= "XXXXX"%></td>
            <td><%= "XXXXXXXXXXXX"%></td>
            <td><%= @seller.minsell_amount%></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="col-sm-6 col-sm-offset-3 col-md-10 col-md-offset-2 main">
    <h3>Send an e-mail of seller details !</h3>
    <%= form_for @buyer, :html => {:class => "form-horizontal"},role: "form" do |f| %>
    <fieldset>
      <div class="control-group">
      Your Email:
      <%=f.text_field :email, class: 'input-xlarge', required: true %>
      </div>
      <div class="control-group">
      Amount to purchase:
      <%=f.text_field :purchase_amount, class: 'input-xlarge', required: true %>
      </div>
      <div class="control-group">
      Bitcoin Address:
      <%=f.check_box :bitcoin_address,{},true,false%>
      </div>
      <div class="control-group">
        Are you a robot?
        <%= f.simple_captcha :label => "" %>
                      <%#=f.text_field :captcha_code, :as => :simple_captcha %>
      </div>
      <div>Terms of Service, and to confirm deposits within 3 hours. <%=f.check_box :tos , required: true %></div>
      <%= f.hidden_field :user_id, value: current_user.id %>
      <%= f.submit "Send E-mail", class: "btn btn-success"%>
      <%= f.hidden_field :seller_id, value: params[:seller_id] %>
    </fieldset>
    <% end %>
  </div>
</div>
