<div class="container">
  <% if params[:type] == "buy"%>
   <h1>Buy bitcoins online</h1>
  <% else%>
    <h1>Sell bitcoins online</h1>
  <%end%>
    <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>Seller</th>
            <th>Currency</th>
            <th>Bank name</th>
            <th>Margin</th>
            <th>Min transaction limit</th>
            <th>Max transaction limit</th>
            <th>Restrict to</th>
            <th>Price</th>
            <th>Title</th>
            <th>Terms</th>
            <th>Minimum volume</th>
            <th>Minimum feedback score</th>
            <th>New buyer limit</th>
            <th>Payment ref</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= link_to item.user.name, item_path(item) %></td>
              <td><%= item.currency %></td>
              <td><%= item.bank_name %></td>
              <td><%= item.margin %></td>
              <td><%= item.min_transaction_limit %></td>
              <td><%= item.max_transaction_limit %></td>
              <td><%= item.restrict_to %></td>
              <td><%= item.price %></td>
              <td><%= item.title %></td>
              <td><%= item.terms %></td>
              <td><%= item.minimum_volume %></td>
              <td><%= item.minimum_feedback_score %></td>
              <td><%= item.new_buyer_limit %></td>
              <td><%= item.payment_ref %></td>
              <% if current_user.present? && current_user.buyers.count >= 2 %>
                <td>
                <%= link_to "Buy BitCoin", new_buyer_path(item_id: item.id), disabled: true, class: "btn btn-info" %></td>
              <%else%>
                 <td>
                <%= link_to "Buy BitCoin", new_buyer_path(item_id: item.id), class: "btn btn-info" %></td>
              <%end%>        
      <!--         <td><%#= link_to 'Show', item %></td>
              <td><%#= link_to 'Edit', edit_item_path(item) %></td>
              <td><%#= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
            </tr>
          <% end %>
        </tbody>
      </table>
      <br>
      <%= link_to 'New item', new_item_path, class: "btn btn-info" %>
    </div>


